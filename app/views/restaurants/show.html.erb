<div class="title-section">
  <h1><%= @restaurant.name %></h1>
  <div class="control-section">
    <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
    <%= link_to 'Delete', restaurant_path(@restaurant), method: :delete,
    data: {confirm: 'You want to do it??'}, lass: "btn btn-danger"%>
    <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
  </div>
</div>
<p>Address: <%= @restaurant.address %></p>
<p>Contact: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<p>Reviews:</p>
<% @reviews.each do |review| %>
  <li class="review"><%= review.content %> Rating:<%= review.rating %></li>
<% end %>

<%= link_to 'Add new review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

