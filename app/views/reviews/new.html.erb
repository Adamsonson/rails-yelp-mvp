<%= form_for([@restaurant, @review]) do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :rating %>
  <%= f.select :rating, [0, 1, 2, 3, 4, 5], :prompt => 'Your rating' %>

  <%= f.submit %>
<% end %>
<%= link_to 'Back to restaurant', restaurant_path(@restaurant), class: "btn btn-primary" %>
